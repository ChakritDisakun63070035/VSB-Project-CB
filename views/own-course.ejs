  <style>
    .form-inline {
      display: inline-block;
      width: 50%;
      vertical-align: middle;
    }

    a.myAnim:hover {
      animation: myAnim 1s ease 0s 1 normal forwards;
      box-shadow: 0 0 15px gray;
    }


    @keyframes myAnim {
      0% {
        transform: scale(1);
      }

      50% {
        transform: scale(1.1);
      }

      100% {
        transform: scale(1);
