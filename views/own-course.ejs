              <div class="card-body">
                <h5 class="card-title text-center"><b>
                    {{ course.course_name }} </b></h5>
                <p class="card-text text-center">
                  {{ course.course_info }}
                </p>
                <div class="row">

                </div>
              </div>
            </a>
          </div>
        </div>
      </div>
    </div>
    <br>
    <footer class="mt-5 footer bg-light">
