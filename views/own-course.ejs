        </div>
      </div>
    </footer>
  </div>

  <script>
    var app = new Vue({
      el: "#app",
      data: {
        data: JSON.parse(`<%- data %>`),
        users: JSON.parse(`<%- users %>`),
        sorted: "",
        search: "",
      },
      // computed: {
      computed: {
        filteredList() {
          return this.users.filter(post => {
            return post.course_name.toLowerCase().includes(this.search.toLowerCase())
          })
        },
        computedCourses() {
          this.users.map((b) => {
            if (b.course_info.length > 90) {
              b.course_info = b.course_info.substring(0, 90) + "..."
            }
            return b
          })

          function compareAlpha(a, b) {
            if (a.course_name < b.course_name) {
              return -1
            } else if (a.course_name > b.course_name) {
              return 1
            } else {
              return 0
            }
          }

          function compareID(a, b) {
            if (a.course_id < b.course_id) {
              return -1
            } else if (a.course_id > b.course_id) {
              return 1
            } else {
              return 0
            }
          }

          function comparePrice(a, b) {
            if (a.course_price < b.course_price) {
              return -1
            } else if (a.course_price > b.course_price) {
              return 1
            } else {
              return 0
            }
          }

          let res = this.users.filter(post => {
            return post.course_name.toLowerCase().includes(this.search.toLowerCase())
          })

          if (this.sorted == "" && this.search != "") {
            return res
          } else if (this.sorted == "alpha") {
            return res.sort(compareAlpha)
          } else if (this.sorted == "sortID") {
            return res.sort(compareID)
          } else if (this.sorted == "price") {
            return res.sort(comparePrice)
          } else {
            return res
          }
        },
        filteredTasks() {
          function compareAlpha(a, b) {
            if (a.course_name < b.course_name) {
              return -1
            } else if (a.course_name > b.course_name) {
              return 1
            } else {
              return 0
            }
          }

          function compareID(a, b) {
            if (a.course_id < b.course_id) {
              return -1
            } else if (a.course_id > b.course_id) {
              return 1
            } else {
              return 0
            }
          }

          function comparePrice(a, b) {
            if (a.course_price < b.course_price) {
              return -1
            } else if (a.course_price > b.course_price) {
              return 1
            } else {
              return 0
            }
          }
          if (this.sorted == "alpha") {
            return this.users.sort(compareAlpha)
          } else if (this.sorted == "sortID") {
            return this.users.sort(compareID)
          } else if (this.sorted == "price") {
            return this.users.sort(comparePrice)
          }
        },
      },
      // },
    })
  </script>

