<html>

    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>VSB</title>
        <link rel="icon" href="/uploads/logo.png" />
        <link href="/css/bootstrap.css" rel="stylesheet" />
        <link href="/css/css.css" rel="stylesheet" />
        <script src="/js/bootstrap.bundle.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/vue@2.6.14/dist/vue.js"></script>
    </head>

    <body>
        <div class="" id="app">
            <header>
                <nav class="navbar navbar-expand-lg navbar-light p-0"
                    id="backgroud_nav">

                    <div class="container-fluid" v-for="user in users">

                        <a class="navbar-brand"
                            :href="'/admin/'+user.admin_id+'/checkpayment'">
                            <img src="/uploads/logo.png" alt="" width="45"
                                height="45" />
                        </a>

                        <div class="d-flex">
                            <a class="navbar-brand
                                my-auto ms-auto myAnimNav"
                                :href="'/admin/'+user.admin_id+'/checkpayment'">
                                <span class="text_nav navhover">
                                    Check Payment
                                </span>
                            </a>
                            <a class="navbar-brand my-auto ms-auto myAnimNav"
                                :href="'/admin/'+user.admin_id
                                +'/myteam'">
                                <span class="text_nav navhover">
                                    My team
                                </span>
                            </a>
                            <li class="nav dropdown">
                                <a class="nav-link dropdown-toggle my-auto ms-auto text_nav navhover myAnimNav" href="#"
                    id="navbarScrollingDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <span>
                      <img :src="user.admin_img" alt="" width="45" height="45" class="d-inline-block imgNav" />
                      {{user.admin_fname}}</span>
                  </a>
                                <ul class="dropdown-menu"
                                    aria-labelledby="navbarScrollingDropdown">
                                    <li><a class="dropdown-item"
                                            :href="'/admin/profile/' +
                                            user.admin_id + '/'">Profile</a></li>
                                    <li><a class="dropdown-item"
                                            href="/sign-out/">Logout</a></li>
                                </ul>
                            </li>
                        </div>

                    </div>
                </nav>
            </header>
            <div class="container">
                <div v-for="user in users">
                    <div class="row mt-5">
                    </div>
                    <div class="row px-4">
                        <div class="card text-center">
                            <div class="card-header">
                                <ul class="nav nav-tabs card-header-tabs">

                                    <li class="nav-item">
                                        <a class="nav-link"
                                            :href="'/admin/'+user.admin_id+'/checkpayment'">Check
                                            Payment</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link active"
                                            :href="'/admin/'+user.admin_id+'/confirm'">Already
                                            Check</a>
                                    </li>
                                </ul>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-2 text-center">
                                        <h5 class=""></h5>
                                    </div>
                                    <div class="col-sm-2 text-center">
                                        <h5 class="">User ID</h5>
                                    </div>
                                    <div class="col-sm-2 text-center">
                                        <h5 class="">Username</h5>
                                    </div>
                                    <div class="col-sm-2 text-center">
                                        <h5>Order ID</h5>
                                    </div>
                                    <div class="col-sm-2 text-center">
                                        <h5 class="">Price Total</h5>
                                    </div>
                                    <div class="col-sm-2 text-center">
                                        <h5 class="">Status</h5>
                                    </div>
                                </div>
                                <div class="row" v-for="info in data">

                                    <div class="card">

                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-sm-2">
                                                    <p class="mt-3
                                                        text-success">
                                                        <i class="bi bi-check-lg
                                                            h4"></i>
                                                    </p>
                                                </div>
                                                <div class="col-sm-2">
                                                    <p class="mt-3">
                                                        {{info.user_id}}
                                                    </p>
                                                </div>
                                                <div class="col-sm-2">
                                                    <p class="mt-3">
                                                        {{info.user_fname + ' '
                                                        +info.user_lname}}
                                                    </p>
                                                </div>
                                                <div class="col-sm-2">
                                                    <p class="mt-3">
                                                        {{info.order_id}}
                                                    </p>
                                                </div>
                                                <div class="col-sm-2">
                                                    <p class="mt-3">
                                                        {{info.price_total}}
                                                    </p>
                                                </div>
                                                <div class="col-sm-2">
                                                    <p class="mt-3 ms-4
                                                        text-success">
                                                        success
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <hr>
                                </div>

                            </div>
                        </div>
                        <div class="nocourse my-5">

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script>
            var app = new Vue({
                el: "#app",
                data: {
                    data: JSON.parse(`<%- data %>`),
                    users: JSON.parse(`<%- users %>`),

                    sorted: "",
                    idCounter: 16,
                    pay_check: 0,
                },
                methods: {
                    updateslip() {
                        this.pay_check = 1

                    },
                }

            })
        </script>
    </body>

</html>