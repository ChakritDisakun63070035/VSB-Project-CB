      <div class="row mt-4">
        <div class="col-md-6 col-sm-12">
          <img src="/uploads/search.png" alt="Girl in a jacket" width="50px" height="50px" />
          <input type="text" class="form-control form-inline bg_course" placeholder="Search" v-model="search" />
        </div>
        <div class="col-md-6 col-sm-12 text-md-end mt-3 mt-md-2">
          <select v-model="sorted" class="form-select form-inline" style="width: auto;">
            <option value="">Filters</option>
            <option value="alpha">Sort by Alphabet</option>
            <option value="price">Sort by Price</option>
          </select>
        </div>

        <div v-if="search === ''">
          <div class="row mt-4" v-if="sorted === ''">
            <h5>All Course</h5>
          </div>
          <div class="row mt-4" v-if="sorted != ''">
            <h5>Sort by {{sorted}}</h5>
          </div>
          <div class="row px-4">
            <div class="col-sm-12 col-md-6 col-xl-4 my-3" v-for="course in
          computedCourses">
              <a :href="'/allcourse/course/' + course.course_id" class="card myAnim
            bg-light" style="width: 20rem; text-decoration: none; color: black">
                <img :src="course.image" class="my_img card-img-top" alt="..." />
                <div class="card-body">
                  <h5 class="card-title text-center">
                    <b>
                      {{ course.course_name }} </b>
                  </h5>
                  <p class="card-text text-center">
                    {{ course.course_info }}
                  </p>
                  <div class="row">
                    <div class="col-6">Courses price</div>
                    <div class="col"></div>
                    <div class="col text-danger">
                      {{ course.course_price }}฿
                    </div>
                  </div>
                </div>
              </a>
            </div>
          </div>
        </div>
        <div v-if="search != ''">
          <div class="row mt-4">
            <div>
              <h5>Result of "{{search}}"</h5>
            </div>
          </div>
          <div class="row px-4">
            <div class="col-sm-12 col-md-6 col-xl-4 my-3" v-for="course in filteredList">
              <a :href="'/allcourse/course/' + course.course_id" class="card myAnim
            bg-light" style="width: 20rem; text-decoration: none; color: black">
                <img :src="course.image" class="my_img card-img-top" alt="..." />
                <div class="card-body">
                  <h5 class="card-title text-center">
                    <b>
                      {{ course.course_name }} </b>
                  </h5>
                  <p class="card-text text-center">
                    {{ course.course_info }}
                  </p>
                  <div class="row">
