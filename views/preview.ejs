          axios
            .delete(`http://localhost:3000/course/${courseID}/${userID}/${commentID}`)
            .then((response) => {
              console.log(response);
              this.comment.splice(index, 1);
            })
            .catch((error) => {
              this.error = error.message;
            });
        }
      },

