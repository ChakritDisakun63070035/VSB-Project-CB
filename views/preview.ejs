        const formData = new FormData();
        formData.append("document", this.file);
        axios
          .post(`http://localhost:3000/adddocument/${courseID}/${userID}`, formData)
          .then((response) => {
            console.log(response)
          })
          .catch((error) => {
            console.log(error)
          })

      },
      learn(videos, index) {
        this.video_content = videos.path
        this.name_content = videos.course_name + ': Part ' + parseInt(index + 1)
      },
      addLikeCourse(courseID, userID) {
