        console.log(documentId);
      },
      getDocumentForTeacher(courseID) {
        axios
          .get(`http://localhost:3000/getdocumentteacher/${courseID}`)
          .then((response) => {
            this.document = response.data
            console.log(response)
          })
          .catch((error) => {
            console.log(error)
          })
      },
      selectFile(event) {
        this.file = event.target.files[0];
